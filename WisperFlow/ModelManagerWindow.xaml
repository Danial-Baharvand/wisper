<Window x:Class="WisperFlow.ModelManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Model Manager" Width="520" Height="480"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{StaticResource PrimaryBrush}">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Model Manager" FontFamily="Segoe UI Semibold" FontSize="20" 
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Download or remove local AI models" FontSize="12" 
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
        </StackPanel>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="TRANSCRIPTION (WHISPER)" Style="{StaticResource SettingLabel}" Margin="0,0,0,8"/>
                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <ItemsControl x:Name="WhisperModelsList"/>
                </Border>
                
                <TextBlock Text="POLISH (LLM)" Style="{StaticResource SettingLabel}" Margin="0,0,0,8"/>
                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <ItemsControl x:Name="LLMModelsList"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <Border x:Name="DownloadPanel" Grid.Row="2" Background="{StaticResource SecondaryBrush}" 
                CornerRadius="8" Padding="16" Margin="0,0,0,16" Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="DownloadText" Text="Downloading..." 
                           Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" Margin="0,0,0,8"/>
                <ProgressBar x:Name="DownloadProgress" Height="8" Minimum="0" Maximum="100"
                             Background="{StaticResource BorderBrush}" Foreground="{StaticResource AccentBrush}"/>
                <Grid Margin="0,8,0,0">
                    <TextBlock x:Name="DownloadStatus" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                    <Button Content="Cancel" Style="{StaticResource SecondaryButton}" Width="70"
                            HorizontalAlignment="Right" Click="CancelDownload_Click"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <Grid Grid.Row="3">
            <TextBlock x:Name="StorageText" Foreground="{StaticResource TextSecondaryBrush}" 
                       FontSize="11" VerticalAlignment="Center"/>
            <Button Content="Close" Style="{StaticResource ModernButton}" Width="100"
                    HorizontalAlignment="Right" Click="Close_Click"/>
        </Grid>
    </Grid>
</Window>

